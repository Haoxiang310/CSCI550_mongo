# -*- mode: python -*-

Import("env")

env = env.Clone()

env.Benchmark(
    target='key_gen_bm',
    source='key_gen_bm.cpp',
    LIBDEPS=[
        '$BUILD_DIR/mongo/base',
        'index_access_method',
    ],
)

